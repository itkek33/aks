<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourCity.NewsDetail"
             Title="NewsDetail"
             BackgroundColor="Black">


    <ScrollView BackgroundColor="Black">

        <StackLayout Padding="8" BackgroundColor="Black">
        <Button Text="Back" FontSize="20" Clicked="Button_Clicked" HorizontalOptions="Start"></Button>
        <Label x:Name="TitleNewsDetail" FontSize = "36"  TextColor = "White" HorizontalOptions="Center"/>
        <Label x:Name="DataStartDetail" FontSize = "36"  TextColor = "White" HorizontalOptions="Center"></Label>
        <Image x:Name="ImageNewsDetail" HeightRequest="400" WidthRequest="400" HorizontalOptions="Center"></Image>
        <Label x:Name="DetailsNewsDetail" FontSize = "20"  TextColor = "White" HorizontalOptions="Center"/>
    </StackLayout>
                    

      </ScrollView>

</ContentPage>